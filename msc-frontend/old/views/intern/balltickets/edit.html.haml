.main-padding
  %h1.page-header
    - if can?(:read, @ballticket)
      = link_to content_tag(:span, nil, {class: "glyphicon glyphicon-arrow-left"}), intern_balltickets_path, {class: "btn btn-primary local-nav-links pull-right", data: {toggle: "tooltip", placement: "bottom"}, title: I18n.t(:back_to_the_show)}
    = I18n.t(:"balltickets.edit_header", corp: @ballticket.corp.try(:title))

  .row
    .col-md-6.col-md-offset-3
      = form_for([:intern, @ballticket]) do |f|
        - if @ballticket.errors.any?
          %ul.form-errors.alert-danger
            = @ballticket.errors.full_messages.map { |msg| content_tag(:li, msg) }.join.html_safe
        .form-group
          %div= f.label :ticket_size
          = f.text_field :ticket_size, {class: "form-control"}
        .form-group
          %div= f.label :contact_person
          = f.text_field :contact_person, {class: "form-control"}
        .form-group
          %div= f.label :phone
          = f.text_field :phone, {class: "form-control"}
        .form-group
          = f.submit I18n.t(:save), {class: "btn btn-primary pull-right"}
          .clearfix



