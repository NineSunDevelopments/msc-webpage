.main-padding
  %h1.page-header
    - if can?(:read, @user)
      = link_to content_tag(:span, nil, {class: "glyphicon glyphicon-arrow-left"}), intern_user_path(@user), {class: "btn btn-primary local-nav-links pull-right", data: {toggle: "tooltip", placement: "bottom"}, title: I18n.t(:back_to_the_show)}
    = @user.corp.present? ? I18n.t(:"users.edit_corp_headers", corp: "#{Corp.model_name.human} #{@user.corp.title}") : I18n.t(:"users.edit_headers")
  .user-form.row
    - if @user.corp.present?
      .col-md-4
        .wappen-container
          = image_tag "wappen/#{@user.corp.image}"
      .col-md-8
        = render "form"
    - else
      .col-md-6.col-md-offset-3
        = render "form"

