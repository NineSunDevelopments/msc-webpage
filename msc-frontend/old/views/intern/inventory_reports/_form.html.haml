= form_for([:intern, @corp, @semester, @inventory_report], html: {id: "report-form", data: {status: "unconfirmed"}}) do |f|
  - if @inventory_report.errors.any?
    %ul.form-errors.alert-danger
      = @inventory_report.errors.full_messages.map { |msg| content_tag(:li, msg) }.join.html_safe
  .invisible
    = f.check_box :accept_report, {id: "accept-reports-checkbox"}
  .page-header
    %h1
      = I18n.t(:"inventory_reports.form_headers.eb_data")
  %p.form-helper-item
    = I18n.t(:"inventory_reports.form_helper")
  .form-group
    %div= f.label :eb_count
    = f.number_field :eb_count, {class: "form-control", style: "width: 100px;"}
  .form-group
    %div= f.label :eb_names
    = f.text_area :eb_names, {class: "form-control"}

  .page-header
    %h1
      = I18n.t(:"inventory_reports.form_headers.cb_data")
