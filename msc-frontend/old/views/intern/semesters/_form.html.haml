= form_for([:intern, @semester]) do |f|
  - if @semester.errors.any?
    %ul.form-errors.alert-danger
      = @semester.errors.full_messages.map { |msg| content_tag(:li, msg) }.join.html_safe
  .form-group
    %div= f.label :title, "#{Semester.human_attribute_name(:title)} #{required_asterix}".html_safe
    = f.text_field :title, {class: "form-control"}
  .form-group
    %div= f.label :description
    = f.text_area :description, {class: "form-control"}
  .form-group
    = f.check_box :next_current
    = f.label :next_current
  .form-group
    = f.submit I18n.t(:save), {class: "btn btn-primary pull-right"}
    .clearfix
  .form-group.required-explaination
    = required_asterix
    = I18n.t(:required_explain)
