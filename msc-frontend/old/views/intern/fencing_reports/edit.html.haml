.main-padding
  %h1.page-header
    - if can?(:read, @fencing_report)
      = link_to content_tag(:span, nil, {class: "glyphicon glyphicon-arrow-left"}), intern_corp_semester_fencing_report_path(@corp, @semester, @fencing_report), {class: "btn btn-primary local-nav-links pull-right", data: {toggle: "tooltip", placement: "bottom"}, title: I18n.t(:back_to_the_list)}
    = I18n.t(:"fencing_reports.site_header", semester: @semester.title)
    %small
      - if @fencing_report.reported_at.present?
        = "#{FencingReport.human_attribute_name(:reported_at)} #{I18n.l(@fencing_report.reported_at, format: :short)}"
      - else
        = content_tag(:span, I18n.t(:"fencing_reports.not_reported"), {style: "color: #cc0000;"})
  .reports-form.row
    .col-md-8.col-md-offset-2
      .wappen-container
        = image_tag "wappen/#{@corp.image}"
      = render "form"
