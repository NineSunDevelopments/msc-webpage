%section.devise-form
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
    .col-md-4.col-md-offset-4
      .devise-form-header
        .fa.fa-envelope
      .devise-form-container.ui-corner-top
        - if resource.errors.any?
          %ul.devise-errors
            - resource.errors.full_messages.each do |message|
              %li= message
        %h2= I18n.t(:"authorization.please_insert_email")
        .form-group.with-submit-button
          = f.email_field :email, autofocus: true , class: "form-control", placeholder: User.human_attribute_name(:email)
          %button.btn.btn-default.btn-circle{type: "submit", data: { toggle: "tooltip", placement: "bottom" }, title: I18n.t(:"authorization.reset_password")}
            %span.glyphicon.glyphicon-arrow-right
      = render "devise/shared/form_footer"

